        <!--android:textAlignment="center"-->
        <!--android:layout_gravity="center"-->
        <!--style="@style/Base.TextAppearance.AppCompat.Small"-->
        <!--android:layout_weight="2"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content" />-->


</LinearLayout>